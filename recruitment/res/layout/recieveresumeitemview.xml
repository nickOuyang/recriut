<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:padding="@dimen/textblankpadding_large"
	android:background="@drawable/addressselector"
	 >

	<LinearLayout
		android:id="@+id/leftlay"
		android:layout_width="0dip"
		android:layout_height="match_parent"
		android:layout_weight="7"
		android:orientation="vertical" 
		
	
		>

		<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="sdfsdfasdf"
			android:textColor="@color/blue"
			android:textSize="@dimen/nosubscribetitle" >
		</TextView>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/text1_coveritem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="sdfsdfasdf"
				android:textSize="@dimen/nosubscribecontent" />

			<TextView
				android:id="@+id/text2_coveritem"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:text="sdfsdfasdf"
				android:textSize="@dimen/nosubscribecontent" />
		</LinearLayout>

		<TextView
			android:id="@+id/content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="sdfsdfasdf"
			android:textColor="@color/blue"
			android:textSize="@dimen/nosubscribetitle"
			android:visibility="gone"
			 >
		</TextView>
	</LinearLayout>
	<!-- <LinearLayout -->
	<!-- android:id="@+id/line" -->
	<!-- android:layout_width="match_parent" -->
	<!-- android:layout_height="1dip" -->
	<!-- android:background="@drawable/linearlayoutshape" > -->
	<!-- </LinearLayout> -->

	<CheckBox
		android:id="@+id/checkBox"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:visibility="gone"
		android:background="#00000000"
		 />

</LinearLayout>