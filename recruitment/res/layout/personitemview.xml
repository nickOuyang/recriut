<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/root_personitem"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/text1_personitem"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:padding="@dimen/textblankpadding_large"
			android:textSize="@dimen/zhiweixiangqing_jobname" />

		<TextView
			android:id="@+id/text2_personitem"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableRight="@drawable/home_arrow_right"
			android:gravity="right"
			android:padding="@dimen/textblankpadding_large"
			android:textSize="@dimen/zhiweixiangqing_jobname" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="1dip"
		android:background="@drawable/linearlayoutshape" >
	</LinearLayout>
</LinearLayout>