<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rootlay_searchresultactivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/img4_02"
		android:orientation="horizontal"
		android:paddingTop="@dimen/textblankpadding" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/addresstext"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/img4_05"
				android:gravity="center_vertical"
				android:textSize="@dimen/noemail"
				/>

			<EditText
				
				android:id="@+id/keywordedit"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/img_search_bg" />

			<ImageButton
				
				android:id="@+id/resultactivity_search"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/img4_07" />
		</LinearLayout>
	</LinearLayout>


	

	<ListView
		android:id="@+id/listviewsearchresultactivity"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:listSelector="@drawable/addressselector"
		>
	</ListView>

</LinearLayout>