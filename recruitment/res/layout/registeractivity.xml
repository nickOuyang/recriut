<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rootlay_registeractivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20"
		android:paddingTop="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="用 户 名"
			android:textSize="@dimen/noemail" />

		<EditText
			android:id="@+id/register_username"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:background="@drawable/orangeeditselector"
			android:hint="请输入用户名"
			android:maxLines="1"
			android:padding="@dimen/textblankpadding_3" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="@dimen/textblankpadding_20"
			android:text="  "
			android:textSize="@dimen/noemail" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:text="请填写4到20个字符的用户名"
			android:textSize="@dimen/subscribejobnamesize" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20"
		android:paddingTop="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="密码"
			android:textSize="@dimen/noemail" />

		<EditText
			android:id="@+id/register_password"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:background="@drawable/orangeeditselector"
			android:hint="请输入密码"
			android:maxLines="1"
			android:padding="@dimen/textblankpadding_3"
			android:password="true" >
		</EditText>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="@dimen/textblankpadding_20"
			android:text="  "
			android:textSize="@dimen/noemail" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:text="请输入6到20个字母(区分大小写)或数字"
			android:textSize="@dimen/subscribejobnamesize" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20"
		android:paddingTop="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="确认密码"
			android:textSize="@dimen/noemail" />

		<EditText
			android:id="@+id/confirm_password"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:background="@drawable/orangeeditselector"
			android:hint="请确认密码"
			android:maxLines="1"
			android:padding="@dimen/textblankpadding_3"
			android:password="true" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="  "
			android:textSize="@dimen/noemail" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:text="请再次输入密码"
			android:textSize="@dimen/subscribejobnamesize" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20"
		android:paddingTop="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="邮箱"
			android:textSize="@dimen/noemail" />

		<EditText
			android:id="@+id/register_email"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:background="@drawable/orangeeditselector"
			android:hint="请输入邮箱"
			android:maxLines="1"
			android:padding="@dimen/textblankpadding_3" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text=""
			android:textSize="@dimen/noemail" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:text="请输入正确的邮箱地址"
			android:textSize="@dimen/subscribejobnamesize"  />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20"
		android:paddingTop="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="QQ"
			android:textSize="@dimen/noemail" />

		<EditText
			android:id="@+id/register_qq"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:background="@drawable/orangeeditselector"
			android:hint="请输入QQ号"
			android:maxLines="1"
			android:padding="@dimen/textblankpadding_3" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/textblankpadding_20"
		android:paddingRight="@dimen/textblankpadding_20" >

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text=""
			android:textSize="@dimen/noemail" />

		<TextView
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:text="请输入常用qq号码"
			android:textSize="@dimen/subscribejobnamesize"  />
	</LinearLayout>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_marginTop="@dimen/textblankpadding_20"
		android:onClick="registerOnclick"
		android:text="同意服务条款，注册" />

</LinearLayout>