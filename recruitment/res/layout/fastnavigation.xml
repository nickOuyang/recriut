<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_nav_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_nav_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/zhaopinhui"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_1"
                android:gravity="center_horizontal"
                android:text="招聘会"
                android:textSize="8dip" />

            <TextView
                android:id="@+id/jipinzhiwei"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_2"
                android:gravity="center_horizontal"
                android:text="急聘职位"
                android:textSize="8dip" />

            <TextView
                android:id="@+id/xingjizhaopin_5"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_3"
                android:gravity="center_horizontal"
                android:text="5星级招聘"
                android:textSize="8dip" />

            <TextView
                android:id="@+id/xingjizhaopin_4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_4"
                android:gravity="center_horizontal"
                android:text="4星级招聘"
                android:textSize="8dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                 android:id="@+id/shixishengpaiqian"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_5"
                android:gravity="center_horizontal"
                android:text="实习生派遣"
                android:textSize="8dip" />

            <TextView
                 android:id="@+id/mingquexinzi"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_6"
                android:gravity="center_horizontal"
                android:text="明确薪资"
                android:textSize="8dip" />

            <TextView
                 android:id="@+id/baochibaozhu"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_7"
                android:gravity="center_horizontal"
                android:text="包吃包住"
                android:textSize="8dip" />

            <TextView
                 android:id="@+id/jiudianzhiwei"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_8"
                android:gravity="center_horizontal"
                android:text="酒店职位"
                android:textSize="8dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                 android:id="@+id/canyinzhiwei"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_9"
                android:gravity="center_horizontal"
                android:text="餐饮职位"
                android:textSize="8dip" />

            <TextView
                 android:id="@+id/wenzhizhiwei"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_10"
                android:gravity="center_horizontal"
                android:text="文职职位"
                android:textSize="8dip" />

            <TextView
                 android:id="@+id/shixishengzhiwei"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_11"
                android:gravity="center_horizontal"
                android:text="实习生职位"
                android:textSize="8dip" />

            <TextView
                 android:id="@+id/zixundongtai"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_12"
                android:gravity="center_horizontal"
                android:text="资讯动态"
                android:textSize="8dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>